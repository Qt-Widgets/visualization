<?xml version="1.0" encoding="utf-8"?>
<visu_config>
   <configuration>
       <port>3334</port>
       <width>300</width>
       <height>100</height>
       <colorBackground>30,30,30,255</colorBackground>
       <name>CPU monitor</name>
   </configuration>
   <signals>
       <signal>
           <id>1</id>
           <name>Light 1</name>
           <unit>status</unit>
           <factor>1.0</factor>
           <offset>0.0</offset>
           <min>0</min>
           <max>1</max>
       </signal>
   </signals>
     <instruments>
        <instrument>
            <id>1</id>  
            <type>LED</type>
            <signalId>1</signalId>
            <name>Led 1</name>
            <width>30</width>
            <height>30</height>
            <x>10</x>
            <y>15</y>
            <colorBackground>30,30,30,255</colorBackground>
            <colorForeground>255,100,100,250</colorForeground>
            <colorStatic>200,0,0,255</colorStatic>
            <colorOn>200,255,30,255</colorOn>
            <colorOff>100,100,100,250</colorOff>
            <radius>20</radius>
            <val1>-10.0</val1>
            <val2>6.0</val2>
            <condition>0</condition>
            <showSignalName>0</showSignalName>
            <fontSize>20</fontSize>
        </instrument>
        <instrument>
            <id>2</id>  
            <type>LED</type>
            <signalId>1</signalId>
            <name>Led 2</name>
            <width>30</width>
            <height>30</height>
            <x>10</x>
            <y>55</y>
            <colorBackground>30,30,30,255</colorBackground>
            <colorForeground>255,100,100,250</colorForeground>
            <colorStatic>200,0,0,255</colorStatic>
            <colorOn>200,255,30,255</colorOn>
            <colorOff>100,100,100,250</colorOff>
            <radius>20</radius>
            <val1>-10.0</val1>
            <val2>6.0</val2>
            <condition>0</condition>
            <showSignalName>0</showSignalName>
            <fontSize>20</fontSize>
        </instrument>
   </instruments>
   <controls>
        <control>
            <id>1</id>
            <type>BUTTON</type>
            <width>100</width>
            <height>30</height>
            <x>40</x>
            <y>10</y>
            <name>Light 1</name>
            <actionIp>127.0.0.1</actionIp>
            <actionPort>5000</actionPort>
            <actionMessage>switch</actionMessage>
            <css>color: white;  border: 1px solid red; border-radius: 5px; border-style: outset;</css>
        </control>
        <control>
            <id>2</id>
            <type>BUTTON</type>
            <width>100</width>
            <height>30</height>
            <x>40</x>
            <y>50</y>
            <name>Light 2</name>
            <actionIp>127.0.0.1</actionIp>
            <actionPort>5000</actionPort>
            <actionMessage>switch</actionMessage>
            <css>color: white;  border: 1px solid red; border-radius: 5px; border-style: outset;</css>
        </control>
   </controls>
</visu_config>

